<!-- Add New Employee -->
<div class="container">
  <div class="center flex-column">
    <!--Error Message-->
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p class="text-danger"><%= error %></p>
      <% end %>
    <% end %>
    <%# Form Started Here %>
    <%= form_for @post do |f| %>
      <%= f.label :title, "Title :", class:"mt-3" %>
      <%= f.text_field :title ,placeholder: "Enter Title Here",class:"mb-2 form-control" %>
      <br>
      <%= f.label :content, "Content :" %>
      <%= f.text_field :content ,placeholder: "Enter Content Here",class:"mb-2 form-control" %>
      <br>
      <br>
      <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
    <% end %>
  </div>
</div>
