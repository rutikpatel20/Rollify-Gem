<h1>User Page</h1>
<% @users.each do |user| %>
  <%= user.email %>
  <%= user.roles.pluck(:name) %>
  <b>Current User can Edit a user role?</b>
  <%= policy(User).edit? %>
  <b>Current User can See users index?</b>
  <%= policy(User).index? %>
  <%= link_to "Edit Roles", edit_user_path(user) if policy(User).edit? %>
  <%= user.posts.pluck(:id) %>
  <%= user.creator_posts.pluck(:id) %>
  <%= user.editor_posts.pluck(:id) %>
  <br>
<% end %>
